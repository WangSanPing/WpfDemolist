<Window x:Class="WpfDemolist.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDemolist"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">

    <Grid>
        <StackPanel>
            <Button Height="40" Click="Button_Click" Tag="0" Template="{StaticResource GradientButtonTemplate}">
                简单控件模板DEMO
            </Button>
            <Button Height="40" Click="Button_Click" Tag="1">
                VisualTreeHelper查看窗体可视化树
            </Button>
            <Button Height="40" Click="Button_Click" Tag="2">
                查看所有控件的原始ControlTemplate
            </Button>
            <Button Height="40" Click="Button_Click" Tag="3">
                自定义Listbox
            </Button>
        </StackPanel>
    </Grid>
</Window>
